<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.todoit" path="/org/gnome/shell/extensions/todoit/">
    <key name="todos" type="as">
      <default>[]</default>
      <summary>List of todos</summary>
    </key>
    <!-- got this piece of code from: https://github.com/bsaleil/todolist-gnome-shell-extension -->
    <key name="open-todoit" type="as">
      <default><![CDATA[['<Alt><Shift>space']]]></default>
      <summary>Shortcut to open the extension</summary>
      <description>Click `Alt+Shift+Space` to open the extension.</description>
    </key>
  </schema>
</schemalist>
